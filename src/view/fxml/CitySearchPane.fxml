                        <RadioButton mnemonicParsing="false" text="Rating Low - High" toggleGroup="$sort" userData="rating ASC" />
                    </children>
               <padding>
                  <Insets left="30.0" right="30.0" />
               </padding>
                </HBox>
            </children>
        </VBox>
    </children>
