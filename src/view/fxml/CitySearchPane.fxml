                        <ComboBox fx:id="categoryCombo" minWidth="120.0" prefWidth="150.0" promptText="Category" />
                     </children>
                  </HBox>
                        <RadioButton mnemonicParsing="false" selected="true" text="Rating High - Low" userData="rating DESC">
