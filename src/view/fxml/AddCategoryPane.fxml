                <Label fx:id="title" text="Add Category" VBox.vgrow="NEVER">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Label>
            <TextField fx:id="categoryField" maxWidth="325.0" prefHeight="30.0" prefWidth="300.0" promptText="New category name..." />
